<%- include header %>

<% if (user) { %>
    <% posts.forEach(function (post, index) { %>
        <p><h2><a href="#"><%= post.title %></a></h2></p>
        <p class="info">
        作者：<a href="#"><%= post.name %></a> | 
        日期：<%= post.time.minute %>
        </p>
        <p><%- post.post %></p>
    <% }) %>
<% } else { %>
    <span><a title="登录" href="/blogs/login">login</a></span>
    <span><a title="注册" href="/blogs/reg">register</a></span>
<% } %>

<%- include footer %>